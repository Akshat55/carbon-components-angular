{
  "name": "carbon-components-angular",
  "version": "0.0.0",
  "description": "Next generation components",
  "main": "index.js",
  "scripts": {
    "build": "bash scripts/build.sh",
    "storybook": "ng run carbon-components-angular:storybook",
    "docs:build": "typedoc",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint --fix 'src/**/*.ts'",
    "test": "ng test --no-watch",
    "test:watch": "ng test --watch",
    "build-storybook": "ng run carbon-components-angular:build-storybook",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "ng": "ng",
    "ng:build": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build"
  },
  "husky": {
    "hooks": {
      "pre-push": "bash scripts/prepush.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "pkgRoot": "dist",
    "branches": [
      {
        "name": "master",
        "channel": "latest"
      },
      {
        "name": "next",
        "channel": "next"
      },
      {
        "name": "v3",
        "channel": "carbon-v3",
        "range": "3.x"
      },
      {
        "name": "v9",
        "channel": "carbon-v9",
        "range": "2.X"
      },
      {
        "name": "v10",
        "channel": "carbon-v10",
        "range": "4.x"
      }
    ],
    "tagFormat": "v${version}"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-components"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/carbon-components-angular.git"
  },
  "license": "Apache-2.0",
  "author": "IBM",
  "peerDependencies": {
    "@angular/common": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "@angular/core": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "@angular/forms": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "rxjs": "^6.0.0 || ^7.0.0",
    "zone.js": "^0.11.0",
    "@carbon/styles": "^1.5.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.17",
    "@angular-devkit/core": "12.2.17",
    "@angular/cli": "12.2.17",
    "@angular/common": "12.2.16",
    "@angular/compiler": "12.2.16",
    "@angular/compiler-cli": "12.2.16",
    "@angular/core": "12.2.16",
    "@angular/forms": "12.2.16",
    "@angular/platform-browser": "12.2.16",
    "@angular/platform-browser-dynamic": "12.2.16",
    "@angular/router": "12.2.16",
    "@babel/core": "7.4.3",
    "@carbon/styles": "1.6.0",
    "@carbon/themes": "11.0.1",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@storybook/addon-actions": "6.4.14",
    "@storybook/addon-essentials": "6.4.14",
    "@storybook/addon-links": "6.4.14",
    "@storybook/angular": "6.4.14",
    "@storybook/builder-webpack5": "6.4.14",
    "@storybook/manager-webpack5": "6.4.14",
    "@storybook/source-loader": "6.4.14",
    "@storybook/theming": "6.4.14",
    "@types/jasmine": "3.6.0",
    "@types/node": "12.20.55",
    "babel-loader": "8.0.5",
    "chai": "4.2.0",
    "codelyzer": "6.0.0",
    "commitizen": "4.2.4",
    "core-js": "2.6.11",
    "cz-conventional-changelog-components": "1.0.0",
    "element-closest-polyfill": "1.0.0",
    "exported-tests": "1.0.1",
    "file-type": "12.4.0",
    "gulp": "4.0.0",
    "gulp-concat": "2.6.1",
    "gulp-tap": "1.0.1",
    "husky": "1.3.1",
    "jasmine-core": "3.6.0",
    "jasmine-spec-reporter": "5.0.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-cli": "2.0.0",
    "karma-coverage-istanbul-reporter": "3.0.2",
    "karma-jasmine": "4.0.0",
    "karma-jasmine-html-reporter": "1.7.0",
    "lodash-es": "4.17.21",
    "ng-packagr": "12.2.7",
    "postcss": "8.4.14",
    "postcss-loader": "7.0.0",
    "rxjs": "6.6.7",
    "sass": "1.49.9",
    "sass-loader": "12.1.0",
    "semantic-release": "17.2.3",
    "ts-helpers": "1.1.2",
    "tslint": "6.1.0",
    "typedoc": "0.14.2",
    "typedoc-plugin-external-module-name": "4.0.6",
    "typescript": "4.3.5",
    "whatwg-fetch": "3.0.0",
    "zone.js": "0.11.4"
  },
  "dependencies": {
    "@carbon/icon-helpers": "10.30.0",
    "@carbon/icons": "11.4.0",
    "@carbon/telemetry": "0.1.0",
    "@carbon/utils-position": "1.1.4",
    "flatpickr": "4.6.13",
    "tslib": "2.3.0"
  }
}
